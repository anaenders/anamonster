<%# image_tag('header_tweets.png', :alt => 'tweets', :class => 'search_header') %>
<h3>tweets</h3>

<span class="tweets">
  <% begin %>
  <% i = 0 %>
  <% @twitter.timeline_for(:me, :count => 5) do |status| %>
    <%= i % 2 == 1 ? '<div class="tweet">' : '<div class="tweet alt">' %>
      <%= link_to(image_tag('twitter_bird.png', :alt => 'bird'), "http://www.twitter.com/#{status.user.screen_name}") %>
      <p><%= link_to(status.text, "http://www.twitter.com/#{status.user.screen_name}") %></p>
      <span class = "tweet_info"><%= twitter_time(status.created_at) %> from <%= status.source %></span>
    </div>
    <% i = i + 1 %>
  <% end %>
  <% rescue Twitter::RESTError => e %>
    <div class = "tweet">
      <p>Unable to connect to twitter.</p>
    </div>
  <% end %>
</span>