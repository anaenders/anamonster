<div class="padding">
  <% i = 0 %>
  <% showcase.each_slice(2) do |slice| %>
    <div class="small_image" rel="<%= i %>">
      <%= link_to(image_tag("#{slice[0][:small_image]}.png", :alt => slice[0][:alt_name]), '#') %>
    </div>
    <% if slice.size > 1 %>
      <div class="small_image" rel="<%= i + 1 %>">
        <%= link_to(image_tag("#{slice[1][:small_image]}.png", :alt => slice[1][:alt_name]), '#') %>
      </div>
    <% end %>
    <div class="large_image" id="showcase_<%= i %>">
      <%= image_tag("#{slice[0][:large_image]}.jpg", :alt => slice[0][:alt_name]) %>
      <div class="project_description">
        <p class="description">Description: <%= slice[0][:description] %></p>
        <p class="name">Project name: <%= slice[0][:project_name] %>
          <span class="url">url: <%= link_to(slice[0][:url], slice[0][:url], :target => '_blank') %></span>
        </p>
      </div>
    </div>
    <% if slice.size > 1 %>
      <div class="large_image" id="showcase_<%= i + 1 %>">
        <%= image_tag("#{slice[1][:large_image]}.jpg", :alt => slice[1][:alt_name]) %>
        <div class="project_description">
          <p class="description">Description: <%= slice[1][:description] %></p>
          <p class="name">Project name: <%= slice[1][:project_name] %>
            <span class="url">url: <%= link_to(slice[1][:url], slice[1][:url], :target => '_blank') %></span>
          </p>
        </div>
      </div>
    <% end %>    
    <% i += 2 %>
